{
  "project_name": "Data-Pro-Skill",
  "version": "2.4",
  "structure": {
    "scripts": {
      "path": "scripts/",
      "description": "Project-specific analysis and automation scripts.",
      "subfolders": {
        "utils": "scripts/utils/",
        "notebooks": "scripts/notebooks/"
      }
    },
    "database": {
      "path": "database/",
      "description": "Database and data files.",
      "subfolders": {
        "raw": "database/raw/",
        "metadata": "database/metadata/",
        "processed": "database/processed/",
        "final": "database/final/"
      }
    },
    "docs": {
      "path": "docs/",
      "description": "Studies, reports, and project planning documents.",
      "subfolders": {
        "studies": "docs/studies/",
        "reports": "docs/reports/",
        "plans": "docs/plans/"
      }
    },
    "assets": {
      "path": "assets/",
      "description": "Graphic assets, final docs and project context.",
      "subfolders": {
        "images": "assets/images/",
        "docs": "assets/docs/",
        "context": "assets/context/",
        "harvest": {
          "path": "assets/harvest/",
          "description": "Output from /project-harvest workflow. Organized learnings for absorption.",
          "subfolders": {
            "scripts": "assets/harvest/scripts/",
            "database": "assets/harvest/database/",
            "rules": "assets/harvest/rules/",
            "references": "assets/harvest/references/",
            "workflows": "assets/harvest/workflows/",
            "memory": "assets/harvest/memory/"
          }
        }
      }
    },
    ".agent": {
      "path": ".agent/",
      "description": "AI Agent configuration and persistent state.",
      "subfolders": {
        "rules": ".agent/rules/",
        "references": ".agent/references/",
        "skills": ".agent/skills/",
        "workflows": ".agent/workflows/",
        "memory": ".agent/memory/",
        "scripts": ".agent/scripts/"
      }
    },
    ".github": {
      "path": ".github/",
      "description": "GitHub-specific configurations and branding.",
      "subfolders": {
        "workflows": ".github/workflows/",
        "scripts": ".github/scripts/",
        "images": ".github/images/",
        "release": ".github/release/"
      }
    }
  },
  "conventions": {
    "scripts": "snake_case",
    "folders": "kebab-case",
    "data_format": "parquet"
  },
  "deploy_manifest": {
    "shared_agent_skills": [
      "brainstorming",
      "document-mastery",
      "notebooklm",
      "skill-creator"
    ]
  }
}